<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Equipment Loans - LabTrack</title>
    <link rel="stylesheet" href="loans.css">
</head>

<body>
    <!-- Pattern Background -->
    <div class="pattern-background">
        <div class="nav-section">
            <span class="nav-section-title">NAVIGATION</span>
        </div>

        <div class="nav-items">
            <a href="dashboard.html" class="nav-item">
                <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2">
                    <rect x="3" y="3" width="7" height="7" />
                    <rect x="14" y="3" width="7" height="7" />
                    <rect x="14" y="14" width="7" height="7" />
                    <rect x="3" y="14" width="7" height="7" />
                </svg>
                <span class="nav-text">Dashboard</span>
            </a>
            <a href="inventory.html" class="nav-item">
                <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2">
                    <path d="M3 3h7v7H3zM14 3h7v7h-7zM14 14h7v7h-7zM3 14h7v7H3z" />
                </svg>
                <span class="nav-text">Inventory</span>
            </a>
            <a href="loans.html" class="nav-item active">
                <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2">
                    <circle cx="9" cy="21" r="1" />
                    <circle cx="20" cy="21" r="1" />
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
                </svg>
                <span class="nav-text">Equipment Loans</span>
            </a>
            <a href="reports.html" class="nav-item">
                <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                    <polyline points="14 2 14 8 20 8" />
                </svg>
                <span class="nav-text">Reports</span>
            </a>
            <a href="#" class="nav-item">
                <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2">
                    <circle cx="12" cy="12" r="3" />
                    <path d="M12 1v6m0 6v6" />
                </svg>
                <span class="nav-text">Settings</span>
            </a>
        </div>
    </div>

    <!-- User Profile -->
    <div class="user-profile-section">
        <div class="user-profile-card">
            <div class="user-avatar">A</div>
            <div class="user-info">
                <p class="user-name">Admin</p>
                <p class="user-role">Administrator</p>
            </div>
        </div>
    </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="loans-content">
            <!-- Header -->
            <div class="loans-header">
                <div>
                    <h1 class="page-title">Equipment Loans</h1>
                    <p class="page-subtitle">Track and manage equipment borrowed by students</p>
                </div>
                <button class="add-loan-btn" id="addLoanBtn" onclick="window.openAddModal()">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19" />
                        <line x1="5" y1="12" x2="19" y2="12" />
                    </svg>
                    New Equipment Loan
                </button>
            </div>

            <!-- Filters and Statistics -->
            <div class="filters-section">
                <div class="search-box">
                    <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8" />
                        <path d="m21 21-4.35-4.35" />
                    </svg>
                    <input type="text" id="searchInput" placeholder="Search by student number or item name...">
                </div>

                <div class="filter-group">
                    <label>Status:</label>
                    <select id="statusFilter">
                        <option value="all">All Status</option>
                        <option value="Borrowed">Borrowed</option>
                        <option value="Received">Received</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Location:</label>
                    <select id="locationFilter">
                        <option value="all">All Locations</option>
                        <option value="Physics Laboratory">Physics Laboratory</option>
                        <option value="Chemistry Laboratory">Chemistry Laboratory</option>
                        <option value="Computer Lab">Computer Lab</option>
                        <option value="ECE Lab">ECE Lab</option>
                        <option value="EE Lab">EE Lab</option>
                        <option value="ME Lab">ME Lab</option>
                        <option value="CE Lab">CE Lab</option>
                    </select>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="stats-container">
                <div class="stat-card">
                    <div class="stat-icon borrowed-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <circle cx="9" cy="21" r="1" />
                            <circle cx="20" cy="21" r="1" />
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
                        </svg>
                    </div>
                    <div class="stat-info">
                        <p class="stat-value" id="activeLoansCount">0</p>
                        <p class="stat-label">Active Loans</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon received-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <polyline points="20 6 9 17 4 12" />
                        </svg>
                    </div>
                    <div class="stat-info">
                        <p class="stat-value" id="returnedTodayCount">0</p>
                        <p class="stat-label">Returned Today</p>
                    </div>
                </div>
            </div>

            <!-- Loans Table -->
            <div class="table-container">
                <table class="loans-table" id="loansTable">
                    <thead>
                        <tr>
                            <th>Student Number</th>
                            <th>Item Name</th>
                            <th>Control ID</th>
                            <th>Quantity</th>
                            <th>Location</th>
                            <th>Active Teacher</th>
                            <th>Room</th>
                            <th>Program/Section</th>
                            <th>Date/Time Given</th>
                            <th>Date/Time Received</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="loansTableBody">
                        <!-- Items will be inserted here by JavaScript -->
                    </tbody>
                </table>
                <div class="empty-state" id="emptyState">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="1.5">
                        <circle cx="9" cy="21" r="1" />
                        <circle cx="20" cy="21" r="1" />
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
                    </svg>
                    <p>No loans found</p>
                    <button class="add-loan-btn" onclick="window.openAddModal()">Add Your First Loan</button>
                </div>
            </div>
        </div>
    </main>

    <!-- Add/Edit Loan Modal -->
    <div class="modal-overlay" id="loanModal">
        <div class="modal-container modal-form">
            <button class="modal-close" id="closeModal" onclick="window.closeModal()">&times;</button>
            <h2 class="modal-title" id="modalTitle">New Equipment Loan</h2>

            <form id="loanForm" class="loan-form">
                <input type="hidden" id="loanId">

                <div class="form-row">
                    <div class="form-group">
                        <label for="studentNumber">Student Number *</label>
                        <input type="text" id="studentNumber" required>
                    </div>
                    <div class="form-group">
                        <label for="itemName">Item Name *</label>
                        <input type="text" id="itemName" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="controlId">Control ID *</label>
                        <input type="text" id="controlId" required>
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantity *</label>
                        <input type="number" id="quantity" min="1" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="location">Location *</label>
                        <select id="location" required>
                            <option value="">Select Location</option>
                            <option value="Physics Laboratory">Physics Laboratory</option>
                            <option value="Chemistry Laboratory">Chemistry Laboratory</option>
                            <option value="Computer Lab">Computer Lab</option>
                            <option value="ECE Lab">ECE Lab</option>
                            <option value="EE Lab">EE Lab</option>
                            <option value="ME Lab">ME Lab</option>
                            <option value="CE Lab">CE Lab</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="activeTeacher">Active Teacher *</label>
                        <input type="text" id="activeTeacher" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="room">Room *</label>
                        <input type="text" id="room" required>
                    </div>
                    <div class="form-group">
                        <label for="programSection">Program/Section *</label>
                        <input type="text" id="programSection" required>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn-cancel" id="cancelBtn"
                        onclick="window.closeModal()">Cancel</button>
                    <button type="submit" class="btn-submit">Save Loan</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal-overlay" id="deleteModal">
        <div class="modal-container delete-modal">
            <h2 class="modal-title">Delete Loan?</h2>
            <p class="delete-message">
                Are you sure you want to delete this loan record? This action cannot be undone.
            </p>
            <div class="delete-actions">
                <button class="btn-delete-cancel" onclick="window.closeDeleteModal()">Cancel</button>
                <button class="btn-delete-confirm" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>

    <script src="loans.js"></script>
</body>

</html>