<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - LabTrack</title>
    <link rel="stylesheet" href="dashboard.css">
</head>

<body>
    <!-- Pattern Background -->
    <div class="pattern-background">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
        <div class="orb orb-3"></div>
        <div class="orb orb-4"></div>
    </div>

    <!-- Top Navigation -->
    <nav class="top-nav">
        <div class="nav-content">
            <div class="nav-left">
                <div class="logo">
                    <div class="logo-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <path d="M9 2v6h6V2M9 16h6v6H9M2 9h6v6H2M16 9h6v6h-6" />
                        </svg>
                    </div>
                    <span class="logo-text">LabTrack</span>
                </div>
            </div>

            <div class="nav-right">
                <button class="icon-btn" id="notificationBtn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" />
                        <path d="M13.73 21a2 2 0 0 1-3.46 0" />
                    </svg>
                    <span class="notification-dot"></span>
                </button>
                <a href="index.html" class="sign-out-btn">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                        <polyline points="16 17 21 12 16 7" />
                        <line x1="21" y1="12" x2="9" y2="12" />
                    </svg>
                    <span>Sign Out</span>
                </a>
            </div>
        </div>
    </nav>

    <!-- Left Sidebar -->
    <div class="user-profile-card">
        <div class="user-avatar">A</div>
        <div class="user-info">
            <p class="user-name">Admin</p>
            <p class="user-role">Administrator</p>
        </div>
    </div>
    </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="dashboard-content">
            <!-- Welcome Section -->
            <div class="welcome-section">
                <h1 class="welcome-title">Welcome back, Admin! ðŸ‘‹</h1>
                <p class="welcome-subtitle">Here's what's happening with your lab today.</p>
            </div>

            <!-- Stats Cards (3 cards) -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-header">
                        <svg class="stat-icon" width="24" height="24" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2">
                            <path d="M3 3h7v7H3zM14 3h7v7h-7zM14 14h7v7h-7zM3 14h7v7H3z" />
                        </svg>
                        <span class="stat-value">1,247</span>
                    </div>
                    <h3 class="stat-label">Total Inventory Items</h3>
                </div>

                <div class="stat-card">
                    <div class="stat-header">
                        <svg class="stat-icon stat-icon-warning" width="24" height="24" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2">
                            <path
                                d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                            <line x1="12" y1="9" x2="12" y2="13" />
                            <line x1="12" y1="17" x2="12.01" y2="17" />
                        </svg>
                        <span class="stat-value">23</span>
                    </div>
                    <h3 class="stat-label">Low Stock Items</h3>
                </div>

                <div class="stat-card">
                    <div class="stat-header">
                        <svg class="stat-icon stat-icon-info" width="24" height="24" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2">
                            <circle cx="9" cy="21" r="1" />
                            <circle cx="20" cy="21" r="1" />
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
                        </svg>
                        <span class="stat-value">48</span>
                    </div>
                    <h3 class="stat-label">Active Equipment Loans</h3>
                </div>
            </div>

            <!-- Content Grid -->
            <div class="content-grid">
                <!-- Low Stock Alerts -->
                <div class="content-card">
                    <h2 class="card-title">
                        <svg class="title-icon" width="20" height="20" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2">
                            <path
                                d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                        </svg>
                        Low Stock Alerts
                    </h2>
                    <div class="card-content">
                        <div class="list-item">
                            <div class="list-item-content">
                                <h3 class="list-item-title">Arduino Uno Rev3</h3>
                                <p class="list-item-desc">Stock: 3 units</p>
                            </div>
                            <div class="list-item-side">
                                <span class="urgency-badge urgent">Urgent</span>
                            </div>
                        </div>

                        <div class="list-item">
                            <div class="list-item-content">
                                <h3 class="list-item-title">Soldering Wire (60/40)</h3>
                                <p class="list-item-desc">Stock: 5 rolls</p>
                            </div>
                            <div class="list-item-side">
                                <span class="urgency-badge low">Low</span>
                            </div>
                        </div>

                        <div class="list-item">
                            <div class="list-item-content">
                                <h3 class="list-item-title">VEX V5 Motors</h3>
                                <p class="list-item-desc">Stock: 8 units</p>
                            </div>
                            <div class="list-item-side">
                                <span class="urgency-badge low">Low</span>
                            </div>
                        </div>

                        <div class="list-item">
                            <div class="list-item-content">
                                <h3 class="list-item-title">Raspberry Pi 4 (4GB)</h3>
                                <p class="list-item-desc">Stock: 2 units</p>
                            </div>
                            <div class="list-item-side">
                                <span class="urgency-badge urgent">Urgent</span>
                            </div>
                        </div>

                        <div class="list-item">
                            <div class="list-item-content">
                                <h3 class="list-item-title">Breadboards (830 points)</h3>
                                <p class="list-item-desc">Stock: 6 units</p>
                            </div>
                            <div class="list-item-side">
                                <span class="urgency-badge low">Low</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="content-card">
                    <h2 class="card-title">
                        <svg class="title-icon" width="20" height="20" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2">
                            <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                        </svg>
                        Recent Activity
                    </h2>
                    <div class="card-content">
                        <div class="activity-item">
                            <div class="activity-avatar">JD</div>
                            <div class="activity-content">
                                <p class="activity-text"><strong>John Doe</strong> checked out Arduino Starter Kit</p>
                                <p class="activity-time">2 minutes ago</p>
                            </div>
                        </div>

                        <div class="activity-item">
                            <div class="activity-avatar">JS</div>
                            <div class="activity-content">
                                <p class="activity-text"><strong>Jane Smith</strong> returned Raspberry Pi 4</p>
                                <p class="activity-time">15 minutes ago</p>
                            </div>
                        </div>

                        <div class="activity-item">
                            <div class="activity-avatar">AD</div>
                            <div class="activity-content">
                                <p class="activity-text"><strong>Admin</strong> added 15x VEX V5 Motors to inventory</p>
                                <p class="activity-time">1 hour ago</p>
                            </div>
                        </div>

                        <div class="activity-item">
                            <div class="activity-avatar">MB</div>
                            <div class="activity-content">
                                <p class="activity-text"><strong>Mike Brown</strong> marked 3D Printer as repaired</p>
                                <p class="activity-time">3 hours ago</p>
                            </div>
                        </div>

                        <div class="activity-item">
                            <div class="activity-avatar">SY</div>
                            <div class="activity-content">
                                <p class="activity-text"><strong>System</strong> generated low stock alert for Soldering
                                    Wire</p>
                                <p class="activity-time">5 hours ago</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Equipment Loans -->
            <div class="bottom-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <svg class="title-icon" width="20" height="20" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2">
                            <circle cx="9" cy="21" r="1" />
                            <circle cx="20" cy="21" r="1" />
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
                        </svg>
                        Recent Equipment Loans
                    </h2>
                    <button class="add-btn">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <line x1="12" y1="5" x2="12" y2="19" />
                            <line x1="5" y1="12" x2="19" y2="12" />
                        </svg>
                        New Loan
                    </button>
                </div>

                <div class="loans-grid">
                    <div class="loan-card">
                        <div class="loan-header">
                            <div class="loan-avatar">JD</div>
                            <span class="loan-name">John Doe</span>
                        </div>
                        <p class="loan-item">Arduino Starter Kit</p>
                        <p class="loan-date">Due: Nov 30, 2025</p>
                    </div>

                    <div class="loan-card">
                        <div class="loan-header">
                            <div class="loan-avatar">EM</div>
                            <span class="loan-name">Emily Martinez</span>
                        </div>
                        <p class="loan-item">VEX Robotics Kit</p>
                        <p class="loan-date">Due: Dec 2, 2025</p>
                    </div>

                    <div class="loan-card">
                        <div class="loan-header">
                            <div class="loan-avatar">RG</div>
                            <span class="loan-name">Robert Garcia</span>
                        </div>
                        <p class="loan-item">Oscilloscope</p>
                        <p class="loan-date">Due: Nov 28, 2025</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="dashboard.js"></script>
</body>

</html>