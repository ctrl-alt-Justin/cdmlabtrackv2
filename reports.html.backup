<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics Reports - LabTrack</title>
    <link rel="stylesheet" href="reports.css">
    <div class="logo-icon">L</div>
    <span class="logo-text">LabTrack</span>
    </div>
    </div>

    <div class="nav-right">
        <button class="icon-btn" id="notificationBtn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" />
                <path d="M13.73 21a2 2 0 0 1-3.46 0" />
            </svg>
            <span class="notification-dot"></span>
        </button>
        <a href="index.html" class="sign-out-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                <polyline points="16 17 21 12 16 7" />
                <line x1="21" y1="12" x2="9" y2="12" />
            </svg>
            <span>Sign Out</span>
        </a>
    </div>
    </div>
    </nav>

    <!-- Left Sidebar -->
    <aside class="left-sidebar">
        <div class="sidebar-content">
            <div class="nav-section">
                <span class="nav-section-title">NAVIGATION</span>
            </div>

            <div class="nav-items">
                <a href="dashboard.html" class="nav-item">
                    <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="2">
                        <rect x="3" y="3" width="7" height="7" />
                        <rect x="14" y="3" width="7" height="7" />
                        <rect x="14" y="14" width="7" height="7" />
                        <rect x="3" y="14" width="7" height="7" />
                    </svg>
                    <span class="nav-text">Dashboard</span>
                </a>
                <a href="inventory.html" class="nav-item">
                    <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="2">
                        <path d="M3 3h7v7H3zM14 3h7v7h-7zM14 14h7v7h-7zM3 14h7v7H3z" />
                    </svg>
                    <span class="nav-text">Inventory</span>
                </a>
                <a href="loans.html" class="nav-item">
                    <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="2">
                        <circle cx="9" cy="21" r="1" />
                        <circle cx="20" cy="21" r="1" />
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
                    </svg>
                    <span class="nav-text">Equipment Loans</span>
                </a>
                <a href="reports.html" class="nav-item active">
                    <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                        <polyline points="14 2 14 8 20 8" />
                    </svg>
                    <span class="nav-text">Reports</span>
                </a>
                <a href="#" class="nav-item">
                    <svg class="nav-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="2">
                        <circle cx="12" cy="12" r="3" />
                        <path d="M12 1v6m0 6v6" />
                    </svg>
                    <span class="nav-text">Settings</span>
                </a>
            </div>
        </div>

        <!-- User Profile -->
        <div class="user-profile-section">
            <div class="user-profile-card">
                <div class="user-avatar">A</div>
                <div class="user-info">
                    <p class="user-name">Admin</p>
                    <p class="user-role">Administrator</p>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="reports-content">
            <!-- Header -->
            <div class="reports-header">
                <div>
                    <h1 class="page-title">Analytics Reports</h1>
                    <p class="page-subtitle">Detailed breakdown of inventory status and health</p>
                </div>
                <div class="header-actions">
                    <select class="period-select" id="periodSelect">
                        <option value="month">This Month</option>
                        <option value="week">This Week</option>
                        <option value="year">This Year</option>
                        <option value="all">All Time</option>
                    </select>
                    <button class="export-btn" id="exportBtn" onclick="window.exportToXLSX()">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                            <polyline points="7 10 12 15 17 10" />
                            <line x1="12" y1="15" x2="12" y2="3" />
                        </svg>
                        Export CSV
                    </button>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon total-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <path d="M3 3h7v7H3zM14 3h7v7h-7zM14 14h7v7h-7zM3 14h7v7H3z" />
                        </svg>
                    </div>
                    <div class="stat-info">
                        <p class="stat-label">Total Items</p>
                        <p class="stat-value" id="totalItems">0</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon available-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <polyline points="20 6 9 17 4 12" />
                        </svg>
                    </div>
                    <div class="stat-info">
                        <p class="stat-label">Available</p>
                        <p class="stat-value" id="availableItems">0</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon inuse-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2" />
                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />
                        </svg>
                    </div>
                    <div class="stat-info">
                        <p class="stat-label">In Use</p>
                        <p class="stat-value" id="inUseItems">0</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon broken-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <path
                                d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                            <line x1="12" y1="9" x2="12" y2="13" />
                            <line x1="12" y1="17" x2="12.01" y2="17" />
                        </svg>
                    </div>
                    <div class="stat-info">
                        <p class="stat-label">Broken</p>
                        <p class="stat-value" id="brokenItems">0</p>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="charts-grid">
                <!-- Item Condition Status Chart -->
                <div class="chart-card">
                    <h3 class="chart-title">Item Condition Status</h3>
                    <div class="chart-container">
                        <canvas id="conditionChart"></canvas>
                    </div>
                    <div class="chart-legend" id="conditionLegend"></div>
                </div>

                <!-- Inventory by Category Chart -->
                <div class="chart-card">
                    <h3 class="chart-title">Inventory by Category</h3>
                    <div class="chart-container">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Damaged/Broken Items Report -->
            <div class="broken-items-section">
                <div class="section-header">
                    <div class="section-title">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <path
                                d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                            <line x1="12" y1="9" x2="12" y2="13" />
                            <line x1="12" y1="17" x2="12.01" y2="17" />
                        </svg>
                        <h3>Damaged / Broken Items Report</h3>
                    </div>
                    <span class="items-count" id="brokenCount">0 Items</span>
                </div>
                <div class="table-container">
                    <table class="broken-table">
                        <thead>
                            <tr>
                                <th>ITEM NAME</th>
                                <th>CONTROL ID</th>
                                <th>CATEGORY</th>
                                <th>STATUS</th>
                                <th>LAST CHECKED</th>
                            </tr>
                        </thead>
                        <tbody id="brokenTableBody">
                            <!-- Broken items will be inserted here -->
                        </tbody>
                    </table>
                    <div class="empty-state" id="emptyBrokenState">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.5">
                            <polyline points="20 6 9 17 4 12" />
                        </svg>
                        <p>No broken or damaged items found</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="reports.js"></script>
    </body>

</html>